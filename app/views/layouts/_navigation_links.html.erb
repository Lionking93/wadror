<% if not session[:user_id].nil? %>
    <li>
        <a href="#" class="btn dropdown-toggle" data-toggle="dropdown" aria-
            expanded="false"><%= current_user.username %> <span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'My page', current_user %></li>
            <li><%= link_to 'Rate a beer', new_rating_path %></li>
            <li><%= link_to 'Join a club', new_membership_path %></li>
            <li><%= link_to 'Sign out', signout_path, method: :delete %></li>
        </ul>
    </li>
<% else %>
    <li><%= link_to 'Sign in', signin_path %></li>
    <li><%= link_to 'Sign up', signup_path %></li>
<% end %>
