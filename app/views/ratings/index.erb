<h2>Rating statistics</h2>

<div class="row">
<div class="col-md-4">
  <h3>Best beers</h3>
  <%= render 'best', rated:Beer %>
</div>

<div class="col-md-4">
  <h3>Best breweries</h3>
  <%= render 'best', rated:Brewery %>
</div>

<div class="col-md-4">
  <h3>Best styles</h3>
  <%= render 'best', rated:Style %>
</div>
</div>

<div class="row">
  <h3>Most active users</h3>
  <table class="table table-hover">
    <thead>
    <tr>
      <th></th>
      <th>Favorite beer</th>
      <th>Preferred style</th>
      <th>Favorite brewery</th>
      <th>Ratings</th>
    </tr>
    </thead>
    <tbody>
    <% User.top(3).each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.favorite_beer %></td>
      <td><%= user.favorite_style %></td>
      <td><%= user.favorite_brewery %></td>
      <td><%= user.ratings.count %></td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <h3>Recent ratings</h3>
  <ul>
    <% Rating.recent.each do |rating| %>
    <li><%= rating %> <%= link_to rating.user.username, rating.user %></li>
    <% end %>
  </ul>
</div>

<%= link_to 'New Rating', new_rating_path, class:'btn btn-success' if current_user %>